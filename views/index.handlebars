<div id="overlay">

    <h1 class="jumbotron text-center">Steak Out, Berg In!</h1>

    <section class="container">

        <div class="mb-3 col-12 text-center bg-secondary p-3 rounded">
            <p class="text-light">Please Input Your Name:</p>
            <input class="eater-name" placeholder="Name Here (required)">
        </div>

        <section>
            <div class="modal fade" id="reqName" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Name Required</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Please input your name.
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                    </div>
                </div>
            </div>
        </section>

        <div class="row">
            <div class="row col mx-auto">
                <section class="card mx-auto">
                    <h4 class="card-header text-center">Burgers not eaten:</h4>

                    <ul class="mx-auto px-0">
                        {{#each burgers}}
                            {{#unless devoured}}
                                <div class="rounded hover-craft px-1">
                                    {{burger_name}}
                                    <button class="eat-change btn btn-custo-musto" data-id="{{id}}" data-eaten="1">Eat Me!</button>
                                    </div>
                            {{/unless}}
                        {{/each}}
                    </ul>

                </section>
            </div>

            <div class="row col mx-auto">
                <section class="card mx-auto">
                    <h4 class="card-header text-center">Burgers eaten:</h4>

                    <ul class="mx-auto px-0">
                        {{#each burgers}}
                            {{#if devoured}}
                                <div class="rounded hover-craft px-1">
                                    {{burger_name}}, Eaten by: {{Eaters/0/eater_name}}
                                    <button class="eat-change ewww btn btn-custo-musto" data-id="{{id}}" data-eaten="0">Give Back</button>
                                </div>
                            {{/if}}
                        {{/each}}
                    </ul>

                </section>
            </div>

            <div class="col-12 mx-auto mt-5 text-center"><input id="new-berg" placeholder="New burger name!"></input></div>
            <div class="col-12 mt-1 text-center"><button id="add-berg" class="btn">Add a Burger!</button></div>
        </div>
    </section>

</div>